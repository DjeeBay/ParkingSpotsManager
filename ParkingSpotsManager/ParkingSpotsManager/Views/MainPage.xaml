<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkingSpotsManager.Views.MainPage"
             Title="{Binding Title}"
             NavigationPage.HasNavigationBar="False" 
             Visual="Material"
             NavigationPage.HasBackButton="False">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Please login or create a new account :" />
        <Button Text="New Account" Command="{Binding GoToCommand}" CommandParameter="CreateAccountPage" StyleClass="Success" />
        <Button Text="Log In" Command="{Binding GoToCommand}" CommandParameter="LoginPage" StyleClass="Primary" />
    </StackLayout>

</ContentPage>